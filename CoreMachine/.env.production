# CoreMachine - Production Environment Variables
# Copy this file to .env and update the values
# Replace YOUR_SERVER_IP with your actual server IP or domain

# Database (must match CoreServices credentials)
MYSQL_ROOT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123
MYSQL_DATABASE=coremachine
MYSQL_USER=coremachine
MYSQL_PASSWORD=CHANGE_THIS_DB_PASSWORD

# JWT
JWT_SECRET=CHANGE_THIS_JWT_SECRET_VERY_LONG_AND_SECURE_KEY
JWT_EXPIRES_IN=7d

# MinIO (must match CoreServices credentials)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_THIS_MINIO_PASSWORD_123

# Meilisearch (must match CoreServices credentials)
MEILI_MASTER_KEY=CHANGE_THIS_MEILI_KEY_123
MEILI_ENV=production

# Application URLs (replace YOUR_SERVER_IP with actual IP or domain)
APP_URL=http://YOUR_SERVER_IP
NEXT_PUBLIC_API_URL=http://YOUR_SERVER_IP/api
