# ============================================================================
# CoreMachine - Configurazione Centralizzata Monorepo
# ============================================================================
# Questo file Ã¨ un TEMPLATE. Copialo come .env e configura i valori.
#
# Setup rapido:
#   cp .env.example .env
#   nano .env  (modifica i valori)
# ============================================================================

# ----------------------------------------------------------------------------
# DATABASE (MySQL)
# ----------------------------------------------------------------------------
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=coremachine
MYSQL_USER=root
MYSQL_PASSWORD=rootpassword
DATABASE_URL=mysql://root:rootpassword@localhost:3306/coremachine

# ----------------------------------------------------------------------------
# JWT (JSON Web Tokens)
# ----------------------------------------------------------------------------
JWT_SECRET=your-very-secure-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ----------------------------------------------------------------------------
# MinIO (S3-compatible Object Storage)
# ----------------------------------------------------------------------------
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=coremachine-files

# ----------------------------------------------------------------------------
# Meilisearch (Full-Text Search Engine)
# ----------------------------------------------------------------------------
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_API_KEY=masterKeyChangeThis
MEILI_MASTER_KEY=masterKeyChangeThis
MEILI_ENV=production

# ----------------------------------------------------------------------------
# SMTP (Email)
# ----------------------------------------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@example.com
SMTP_PASSWORD=password
SMTP_FROM=CoreMachine <noreply@example.com>

# ----------------------------------------------------------------------------
# APPLICATION
# ----------------------------------------------------------------------------
APP_PORT=3001
NODE_ENV=development
NEXT_PUBLIC_API_URL=/api
APP_URL=http://localhost
